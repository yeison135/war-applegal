<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="laborappPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.laboraapp.persistence.Usuario</class>
    <class>com.laboraapp.persistence.TipoContrato</class>
    <class>com.laboraapp.persistence.Municipio</class>
    <class>com.laboraapp.persistence.TipoConflicto</class>
    <class>com.laboraapp.persistence.TipoPersona</class>
    <class>com.laboraapp.persistence.Departamento</class>
    <class>com.laboraapp.persistence.Empresa</class>
    <class>com.laboraapp.persistence.Evidencia</class>
    <class>com.laboraapp.persistence.TipoIdentificacion</class>
    <class>com.laboraapp.persistence.Oficina</class>
    <class>com.laboraapp.persistence.Persona</class>
    <class>com.laboraapp.persistence.SalariosMinimos</class>
    <class>com.laboraapp.persistence.Demanda</class>
    <class>com.laboraapp.persistence.Sentencia</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/laborapp?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
